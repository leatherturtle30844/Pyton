def marcao():
    if gato[0] == rato[0]:
        print("GATO COMEU O RATO")
    elif gato == (1, 4) and rato == (2, 1):
        print("VENCEU")
        print("|---|---|   | G |")
        print("| R |   |---|---|")
    elif rato == (1, 4) and gato == (2, 1):
        print("VENCEU")
        print("|---|---|   | R |")
        print("| G |   |---|---|")
    else:
        print("ERRADO")
marcao()
